@model SchoolSystem.DAL.DataTransferObjects.ManageUserTransferObject

@{
    ViewData["Title"] = "Change Password Page";
}

<h1>Нулиране на парола</h1>
<hr>

<form method="post" asp-action="ChangePassword" asp-controller="ManageUser">
    <div class="form-group">
        <label asp-for="Password">Парола</label>
        <input asp-for="Password" type="password" class="form-control" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Потвърди парола</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 20px">
        <input type="submit" value="Запазите промените" class="btn btn-primary" />
    </div>
    <div asp-validation-summary="ModelOnly"></div>
</form>

<div>
    <a class="bi bi-arrow-bar-left" asp-action="DetailsUser" asp-route-id="@Model.Id">Назад към подробностите</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}