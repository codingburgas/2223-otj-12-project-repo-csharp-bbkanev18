@model SchoolSystem.DAL.DataTransferObjects.TestAddInSectionTransferObject

@{
    ViewData["Title"] = "Create Test Page";
}
<h1>Create Test</h1>
<hr>

<form asp-action="CreateTest">
    <div class="form-group">
        <label asp-for="SectionName" class="control-label">Section course name</label>
        <input asp-for="SectionName" class="form-control" disabled/>
        <span asp-validation-for="SectionName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Test name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeLimit" class="control-label">Time limit</label>
        <input asp-for="TimeLimit" class="form-control" required />
        <span asp-validation-for="TimeLimit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Deadline" class="control-label">Deadline (optional)</label>
        <input asp-for="Deadline" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 20px">
        <input type="submit" value="Save changes" class="btn btn-primary" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>

<div>
    <a class="bi bi-arrow-bar-left" asp-route-id="@Model.CourseId" asp-action="CourseSection">Back to section course</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}