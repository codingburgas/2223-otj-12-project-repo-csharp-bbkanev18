@model SchoolSystem.DAL.DataTransferObjects.TestAddInSectionTransferObject

@{
    ViewData["Title"] = "Create Test Page";
}
<h1>Създаване на тест</h1>
<hr>

<form asp-action="CreateTest">
    <div class="form-group">
        <label asp-for="SectionName" class="control-label">Име на раздела</label>
        <input asp-for="SectionName" class="form-control" disabled/>
        <span asp-validation-for="SectionName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Име на теста</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeLimit" class="control-label">Времетраене на теста</label>
        <input asp-for="TimeLimit" class="form-control" required />
        <span asp-validation-for="TimeLimit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Deadline" class="control-label">Краен срок (по избор)</label>
        <input asp-for="Deadline" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 20px">
        <input type="submit" value="Запазите промените" class="btn btn-primary" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>

<div>
    <a class="bi bi-arrow-bar-left" asp-route-id="@Model.CourseId" asp-action="CourseSection">Обратно към курс</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}