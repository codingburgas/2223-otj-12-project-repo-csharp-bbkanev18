@model SchoolSystem.DAL.DataTransferObjects.FileAddInSectionTransferObject

@{
    ViewData["Title"] = "Create Lesson Page";
}

<h1>Create Lesson</h1>
<hr>

<form asp-action="CreateLesson" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="SectionName" class="control-label">Section course name</label>
        <input asp-for="SectionName" class="form-control" disabled />
        <span asp-validation-for="SectionName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="File" class="control-label"></label>
        <input asp-for="File" class="form-control" required />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 20px">
        <input type="submit" value="Save changes" class="btn btn-primary" />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>

<div>
    <a class="bi bi-arrow-bar-left" asp-route-id="@Model.CourseId" asp-action="CourseSection">Back to section course</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}