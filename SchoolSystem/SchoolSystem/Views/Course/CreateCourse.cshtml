@model SchoolSystem.DAL.DataTransferObjects.CourseCreateTransferObject

@{
    ViewData["Title"] = "Create Course";
}

<h1>Създаване на курс</h1>

<form asp-action="CreateCourse">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Име на курса</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    @for (int i = 0; i < 3; i++)
    {
        <div class="form-group">
            <label asp-for="SectionName" class="control-label">Име на раздел (по избор) </label>
            <input asp-for="SectionName" class="form-control" />
            <span asp-validation-for="SectionName" class="text-danger"></span>
        </div>
    }
    <div class="form-group" style="margin-top: 20px">
        <input type="submit" value="Запазите промените" class="btn btn-primary" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>

<div>
    <a class="bi bi-arrow-bar-left" asp-action="Index">Обратно към курсовете</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}