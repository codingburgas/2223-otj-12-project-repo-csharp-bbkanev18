@model SchoolSystem.DAL.DataTransferObjects.CourseCreateTransferObject

@{
    ViewData["Title"] = "Create Course";
}

<h1>Create Course</h1>

<form asp-action="CreateCourse">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    @for (int i = 0; i < 3; i++)
    {
        <div class="form-group">
            <label asp-for="SectionName" class="control-label">SectionName (optional) </label>
            <input asp-for="SectionName" class="form-control" />
            <span asp-validation-for="SectionName" class="text-danger"></span>
        </div>
    }
    <div class="form-group" style="margin-top: 20px">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>