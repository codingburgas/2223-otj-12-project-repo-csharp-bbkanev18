@model SchoolSystem.DAL.DataTransferObjects.UserSignUpDataTransferObject

@{
    ViewData["Title"] = "Account Page";
}

<h1>
    Hello, @Model.FirstName @Model.LastName
</h1>

<hr>

@if (TempData.ContainsKey("Message") && TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-3 row">
    <label asp-for="FirstName" class="col-sm-2 col-form-label">Firstname:</label>
    <div class="col-sm-10">
        <input asp-for="FirstName" readonly class="form-control-plaintext" />
    </div>
</div>

<div class="mb-3 row">
    <label asp-for="MiddleName" class="col-sm-2 col-form-label">Middlename:</label>
    <div class="col-sm-10">
        <input asp-for="MiddleName" readonly class="form-control-plaintext" />
    </div>
</div>

<div class="mb-3 row">
    <label asp-for="LastName" class="col-sm-2 col-form-label">Lastname:</label>
    <div class="col-sm-10">
        <input asp-for="LastName" readonly class="form-control-plaintext" />
    </div>
</div>

<div class="mb-3 row">
    <label asp-for="Age" class="col-sm-2 col-form-label">Age:</label>
    <div class="col-sm-10">
        <input asp-for="Age" readonly class="form-control-plaintext" />
    </div>
</div>

<div class="mb-3 row">
    <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
    <div class="col-sm-10">
        <input asp-for="Email" readonly class="form-control-plaintext" />
    </div>
</div>


<div class="mb-3 row">
    <label asp-for="Address" class="col-sm-2 col-form-label">Address:</label>
    <div class="col-sm-10">
        <input asp-for="Address" readonly class="form-control-plaintext" placeholder="No address provided" />
    </div>
</div>

<div class="mb-3 row">
    <label asp-for="Phone" class="col-sm-2 col-form-label">Phone:</label>
    <div class="col-sm-10">
        <input asp-for="Phone" readonly class="form-control-plaintext" placeholder="No phone provided" />
    </div>
</div>

@if (User.IsInRole("admin"))
{
    <div class="mb-3 row">
        <label for="staticRole" class="col-sm-2 col-form-label">Role:</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticRole" value="admin">
        </div>
    </div>
}
else if (User.IsInRole("teacher"))
{
    <div class="mb-3 row">
        <label for="staticRole" class="col-sm-2 col-form-label">Role:</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticRole" value="teacher">
        </div>
    </div>
}
else if (User.IsInRole("user"))
{
    <div class="mb-3 row">
        <label for="staticRole" class="col-sm-2 col-form-label">Role:</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticRole" value="user">
        </div>
    </div>
}
else
{
    <div class="mb-3 row">
        <label for="staticRole" class="col-sm-2 col-form-label">Role:</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticRole" value="guest">
        </div>
    </div>
}

<a class="btn btn-success bi bi-pencil-square" asp-action="EditAccount" asp-route-id="@Model.Id"> Edit My Account</a> |
<a class="btn btn-primary bi bi-pencil-square" asp-action="ChangePassword" asp-route-id="@Model.Id"> Reset Password</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}